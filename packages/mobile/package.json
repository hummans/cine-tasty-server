{
  "name": "mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build-android": "cd android && ./gradlew assembleRelease && cd ..",
    "android-release": "npx react-native run-android --variant=release",
    "ios-se": "npx react-native run-ios --simulator=\"iPhone SE\"",
    "start:clean": "npx react-native start --reset-cache",
    "android": "npx react-native run-android",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "prettier:fix": "prettier '**/*.+(ts|tsx|json|md)' --write",
    "start": "npx react-native start",
    "ios": "npx react-native run-ios",
    "test": "jest"
  },
  "dependencies": {
    "react": "16.8.6",
    "react-native": "0.60.5",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/runtime": "^7.5.0",
    "@react-native-community/eslint-config": "^0.0.3",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.19",
    "@types/react-native": "^0.60.14",
    "@types/react-test-renderer": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-jest": "^24.1.0",
    "detox": "^15.2.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-detox": "^1.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "jest": "^24.1.0",
    "metro-react-native-babel-preset": "0.54.1",
    "prettier": "^1.19.1",
    "react-native-testing-library": "^1.12.0",
    "react-test-renderer": "16.8.6",
    "typescript": "^3.6.3"
  },
  "workspaces": {
    "nohoist": [
      "react-native",
      "react-native/**"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/CineTasty.app",
        "build": "xcodebuild -workspace ios/CineTasty.xcworkspace -scheme CineTasty -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11 Pro"
        }
      }
    }
  }
}
